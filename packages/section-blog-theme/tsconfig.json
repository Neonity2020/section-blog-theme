{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "target": "es2016",
    "baseUrl": ".",
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
       "@/utility/*": [
        "./utility/*"
      ],
      "@/plugins/*":[
        "./plugins/*"
      ]
    },
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "components",
    "utility",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "__test__/index.js"  ],
  "exclude": [
    "node_modules"
  ]
}
